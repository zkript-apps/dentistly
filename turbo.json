{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**"],
			"env": [
				"API_URL",
				"API_PORT",
				"PASSWORD_ENCRYPT_KEY",
				"API_SIGN_KEY",
				"API_ORIGINS",
				"API_AUTH_URL",
				"API_MOCK_URL",
				"NEXTAUTH_URL",
				"NEXTAUTH_SECRET",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"FACEBOOK_CLIENT_ID",
				"FACEBOOK_CLIENT_SECRET",
				"WEB_URL",
				"NODE_ENV"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		}
	}
}
